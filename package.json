{
  "name": "nanoclaw",
  "version": "1.0.0",
  "description": "Personal Claude assistant. Lightweight, secure, customizable.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "cron-parser": "^5.5.0",
    "grammy": "^1.40.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "bun-types": "^1.3.9",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0"
  },
  "engines": {
    "bun": ">=1.0"
  }
}
